<main>

            <!-- ======slider-area-start=========================================== -->
            <div class="slider-area over-hidden">
                <div class="page-height d-flex align-items-center justify-content-center position-relative" data-background="/images/slider/page-bg.jpg">
                    <div class="slider-shape position-absolute z-index1">
                        <span class="slider-bg-round d-block"></span>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-xl-12  col-lg-12  col-md-12  col-sm-12 col-12">
                            <div class="page-title b-l pt-100 text-center position-relative z-index1">
                                <h2 class="text-capitalize font600 mb-10">Product Details</h2>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb justify-content-center bg-transparent">
                                    <li class="breadcrumb-item"><a class="primary-color" href="index.html">Home</a></li>
                                    <li class="breadcrumb-item active text-capitalize" aria-current="page">Product</li>
                                    </ol>
                                </nav>
                            </div><!-- /page title -->
                        </div><!-- /col -->
                    </div>
                </div><!-- /single-slider -->
            </div>
            <!-- slider-area-end  -->

            <!-- ====== shop page product-details-area-start================================ -->
            <div class="product-details-area pro-top-thamb pro-bottom-thamb pt-100">
                <div class="container">
                    <!-- product-details-tab-area start -->
                    <div class="product-details-content">
                        <div class="single-product-tab-content tab-content" id="myTabContent2">
                            <div class="row">
                                <div class="col-xl-6  col-lg-6  col-md-11  col-sm-12 col-12">
                                    <div class="product-left-img-tab mt-20">
                                        <div class="tab-content width100 text-center position-relative" id="v-pills-tabContent1">
                                            {{#each products.images}}
                                            {{#if (ifIndexZero @ index)}}
                                            <div class="tab-pane fade show active
                                            " id={{idArray.[this]}} role="tabpanel" aria-labelledby={{labelledbyArray.[this]}}>
                                               <div class="product-gallery-btn position-absolute right-site">
                                                    <a href="/uploads/{{this}}" class="zoom-gallery dark-black-color bg-white d-block m-2" data-fancybox="images" ><i class="fas fa-compress"></i><img class="width100 d-none" src="/uploads/{{this}}" alt="image"></a> 
                                                </div><!-- /product-gallery-btn -->
                                                <div class="product-img">
                                                    <img  class="width100 height100" src="/uploads/{{this}}" alt="product">
                                                </div><!-- /product-img -->
                                            </div>
                                            {{else}}
                                             <div class="tab-pane fade
                                            " id={{idArray.[this]}} role="tabpanel" aria-labelledby={{labelledbyArray.[this]}}>
                                               <div class="product-gallery-btn position-absolute right-site">
                                                    <a href="/uploads/{{this}}" class="zoom-gallery dark-black-color bg-white d-block m-2" data-fancybox="images" ><i class="fas fa-compress"></i><img class="width100 d-none" src="/uploads/{{this}}" alt="image"></a> 
                                                </div><!-- /product-gallery-btn -->
                                                <div class="product-img">
                                                    <img  class="width100 height100" src="/uploads/{{this}}" alt="product">
                                                </div><!-- /product-img -->
                                            </div>
                                            {{/if}}
                                            {{/each}}
                                           


                                            {{!-- <div class="tab-pane fade" id="v-pills-profile1" role="tabpanel" aria-labelledby="v-pills-profile-tab1">
                                                <div class="product-gallery-btn position-absolute right-site">
                                                    <a href="/images/product-details/prduct-detl-large-img2.jpg" class="zoom-gallery dark-black-color bg-white d-block m-2" data-fancybox="images" ><i class="fas fa-compress"></i><img class="width100 d-none" src="images/product-details/prduct-detl-large-img2.jpg" alt=""></a> 
                                                </div><!-- /product-gallery-btn -->
                                                <div class="product-img"> 
                                                    <img class="width100" src="/images/product-details/prduct-detl-large-img2.jpg" alt="">                                 
